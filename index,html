	<script type="text/javascript" src="js/jquery-2.1.0.js" ></script>
	<script type="text/javascript">
		var oRotate =$('.rotate_ul');
		var tr =null;
		var num = 0;
		$('#btn1').bind('click',doit);
			
		$('#btn2').click(function(){
			clearInterval(tr);
			$('#btn1').bind('click',doit);
		})
		
		function doit(){
			$('#btn1').unbind('click');
			num += 240;
			oRotate.css('transform','rotate('+num+'deg)');
			tr = setInterval(function(){
				num += 240;
				oRotate.css('transform','rotate('+num+'deg)');
				
			},500)
		}
	</script>
